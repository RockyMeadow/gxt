#bash_completion
# TxGVNN <txgvnn@gmail.com>

_gxt(){
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    #opts='--help --version init add list search view log'
    case "$cur" in
        -*) COMPREPLY=( $( compgen -W '--help --version' -- $cur ) );;
        n*) COMPREPLY=( $( compgen -W 'new' -- $cur ) );;
        a*) COMPREPLY=( $( compgen -W 'add' -- $cur ) );;
        i*) COMPREPLY=( $( compgen -W 'init' -- $cur ) );;
        l*) COMPREPLY=( $( compgen -W 'list log' -- $cur ) );;
        v*) COMPREPLY=( $( compgen -W 'view' -- $cur ) );;
        r*) COMPREPLY=( $( compgen -W 'rm' -- $cur ) );;
        s*) COMPREPLY=( $( compgen -W 'share search' -- $cur ) );;
        *)  COMPREPLY=( $( compgen -W  '--help --version new add init list log view rm share search' -- $cur ) );;
    esac
}
complete -F _gxt gxt
